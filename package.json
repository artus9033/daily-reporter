{
  "name": "daily-reporter",
  "version": "1.0.1",
  "description": "Tiny Node utility to automatize daily reports, written in TypeScript",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "start": "npm run dev",
    "dev": "nodemon",
    "build": "tsc",
    "package": "npm run build && nexe -t 12.16.2 -o ./DailyReporter.exe ./build/index.js || nexe -t 12.16.2 --build -o ./DailyReporter.exe ./build/index.js"
  },
  "author": "artus9033",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "email-validator": "^2.0.4",
    "inquirer": "^8.0.0",
    "moment": "^2.29.1",
    "nodemailer": "^6.5.0",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.37",
    "@types/nodemailer": "^6.4.1",
    "nexe": "^3.3.7",
    "ts-node": "^9.1.1"
  }
}
